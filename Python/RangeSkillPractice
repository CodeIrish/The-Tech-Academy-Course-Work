print ("Problem 1: \n")
for i in range(4):
    print (i)

print()

print("Problem 2: \n")
for i in range(3, -1, -1):
    print (i)

print()

print('''Problem 2: Can also be done with
the reverse option and less parameters\n''')

for i in reversed(range(4)):
    print(i)

print()

print("Problem 3: \n")

for i in range(8, 0, -2):
    print (i)
